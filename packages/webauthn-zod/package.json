{
  "name": "webauthn-zod",
  "type": "module",
  "version": "0.1.5",
  "description": "A utility library for using webauthn with zod",
  "files": [
    "/src",
    "/dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup --format esm",
    "changeset": "changeset",
    "changeset:release": "bun run build && changeset publish",
    "changeset:version": "changeset version && bun install --lockfile-only",
    "clean": "rimraf dist *.tsbuildinfo",
    "format": "biome format . --write",
    "lint": "biome check .",
    "lint:fix": "bun run lint --apply",
    "size": "size-limit",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "test:typecheck": "vitest typecheck",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "webauthn",
    "passkeys",
    "zod"
  ],
  "author": "Peter Ferguson <peterferguson95@gmail.com> (https://github.com/peterferguson)",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.2.2",
    "@changesets/cli": "^2.26.2",
    "@simplewebauthn/typescript-types": "^8.3.4",
    "@tanstack/react-query": "^5.0.5",
    "@types/react": "^18.0.25",
    "bun-types": "^1.0.1",
    "jsdom": "^22.1.0",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.8.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "peerDependencies": {
    "typescript": "^5.0.0",
    "zod": "*"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run format && bun run lint:fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forumdaos/passkeys.git",
    "directory": "packages/webauthn-zod"
  },
  "bugs": {
    "url": "https://github.com/forumdaos/passkeys/issues"
  },
  "homepage": "https://github.com/forumdaos/passkeys#readme",
  "dependencies": {
    "@hexagon/base64": "^1.1.28",
    "@simplewebauthn/server": "^8.3.5",
    "zod": "^3.22.4"
  }
}